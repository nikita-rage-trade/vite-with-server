{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/dist/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "backend/src/index.ts" },
    { "source": "/(.*)", "destination": "frontend/index.html" }
  ]
}
