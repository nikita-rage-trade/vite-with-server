{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/dist" }
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/backend/src/index.ts" },
    { "source": "/(.*)", "destination": "/frontend/index.html" }
  ]
}
